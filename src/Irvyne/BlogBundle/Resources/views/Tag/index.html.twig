{% extends '::base-foundation.html.twig' %}

{% block body -%}
    <h1>Tag list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><a href="{{ path('tag_show', { 'slug': tag.slug }) }}">{{ tag.id }}</a></td>
                <td>{{ tag.name }}</td>
                <td>{{ tag.slug }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tag_show', { 'slug': tag.slug }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tag_edit', { 'slug': tag.slug }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tag_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock body %}
