<!doctype html>
<!--[if IE 9]><html class="lt-ie10" lang="en"><![endif]-->
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Irvyne's Blog{% endblock %}</title>
        <meta name="description" content="Irvyne's blog about web and development">
        <meta name="author" content="Thibaud BARDIN">
        <meta name="copyright" content="MIT Licence">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/irvynezurbfoundation/css/normalize.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/irvynezurbfoundation/css/foundation.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script src="{{ asset('bundles/irvynezurbfoundation/js/modernizr.js') }}"></script>
    </head>
    <body>
        <nav class="top-bar" data-topbar>
            {{ knp_menu_render('main') }}
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('bundles/irvynezurbfoundation/js/jquery.js') }}"></script>
            <script src="{{ asset('bundles/irvynezurbfoundation/js/foundation/foundation.js') }}"></script>
            <script>
                $(document).foundation();
            </script>
        {% endblock %}
    </body>
</html>
